# Exclude repository metadata and tooling configs
.git
.github
.specify
.serena
.vscode

# Exclude build outputs and binaries
bin/
dist/
*.test
*.out
vendor/
tmp/

# Exclude dependency directories
node_modules/

# Exclude coverage and lint artifacts
coverage*
megalinter-reports/
report/

# Exclude environment and log files
.env*
*.log*
Dockerfile*
.dockerignore

